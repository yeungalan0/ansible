# {{ ansible_managed }}
# Pi-hole environment variables
# See: https://github.com/pi-hole/docker-pi-hole#environment-variables
#
# Password: pass via CLI (-e pihole_webpassword='...') to set declaratively,
# or leave blank and set manually: docker exec -it pihole pihole setpassword
{% if pihole_webpassword | length > 0 %}
FTLCONF_webserver_api_password={{ pihole_webpassword }}
{% endif %}
TZ={{ pihole_timezone }}
FTLCONF_dns_listeningMode=all
