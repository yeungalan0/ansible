# {{ ansible_managed }}
{{ pi_ts_hostname }} {
	handle /admin* {
		reverse_proxy 127.0.0.1:{{ pihole_web_port }}
	}

	handle {
		reverse_proxy 127.0.0.1:{{ actual_port }}
	}
}

# Plain HTTP catch-all for LAN access (e.g. http://192.168.x.x/admin)
:80 {
	handle /admin* {
		reverse_proxy 127.0.0.1:{{ pihole_web_port }}
	}

	handle {
		reverse_proxy 127.0.0.1:{{ actual_port }}
	}
}
