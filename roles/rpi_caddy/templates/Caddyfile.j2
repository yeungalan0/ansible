# {{ ansible_managed }}

# Pi-hole on default HTTPS port (Tailscale cert)
{{ pi_ts_hostname }} {
	reverse_proxy 127.0.0.1:{{ pihole_web_port }}
}

# Actual Budget on dedicated port (Tailscale cert)
{{ pi_ts_hostname }}:{{ actual_port }} {
	reverse_proxy 127.0.0.1:{{ actual_port }}
}

# Pi-hole on default HTTPS port (self-signed cert for LAN IP access)
:443 {
	tls internal
	reverse_proxy 127.0.0.1:{{ pihole_web_port }}
}

# Actual Budget on dedicated port (self-signed cert for LAN IP access)
:{{ actual_port }} {
	tls internal
	reverse_proxy 127.0.0.1:{{ actual_port }}
}
